@page "/examples"
<div class="row">
    <div class="col-md-12">
        @if (ApplicationState != null && !string.IsNullOrWhiteSpace(ApplicationState.Message))
        {
            <div class="alert alert-@ApplicationState.MessageType alert-dismissible fade show" role="alert">
                <strong>Note!</strong> @ApplicationState.Message @DateTime.Now.ToShortTimeString()
                <button type="button" class="btn-close" @onclick="@(() => HideMessage())" aria-label="Close"></button>
            </div>
        }
    </div>
    <div class="col-md-4">
        <h5 class="m-1">@Title</h5>
    </div>
    <div class="col-md-4">
        <input @ref="SearchInput" accesskey="i" class="form-control my-1" style="float:right" @bind="@SearchTerm"
               @bind:event="oninput" id="SearchInput" name="SearchTerm" placeholder="Filter by Text (Alt+I)" />
    </div>
</div>

@if (FilteredExampleDTO == null && _loadFailed == true)
{
    <h2 class="text-danger">The data failed to load please try again in a little while..</h2>
    <button class="btn btn-danger" type="button" @onclick="@( () => LoadData() )">Reload</button>
    <h6 class="text-danger">@ExceptionMessage</h6>
}
else if (FilteredExampleDTO == null)
{
    <div style="display:normal;margin:auto" class="loader"></div>
}
else if (FilteredExampleDTO.Count == 0)
{
    <p>No Example match the criteria</p>
    <button @onclick="AddNewExample" class="btn btn-outline-success">Add Record <i class="fas fa-plus"></i></button>
}
else
{
    <table style="font-size:small" class="table table-bordered table-striped table-sm table-responsive-sm">
        <thead>
            <tr>
                <th>ID</th>
                <th>Number Value</th>
                <th>
                    <button class="btn btn-sm" @onclick="@(() => SortExample("Text"))">
                        <i class="fas fa-sort-alpha-up"></i>
                    </button>
                    <button class="btn btn-sm" @onclick="@(() => SortExample("Text Desc"))">
                        <i class="fas fa-sort-alpha-up-alt"></i>
                    </button>
                    Text
                </th>
                <th>Large Text</th>
                <th>Boolean</th>
                <th>Date Value</th>
                <th>
                    <button accesskey="+" @onclick="AddNewExample" class="btn btn-outline-success btn-sm">
                        <i class="fas fa-plus"></i>
                    </button>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var example in FilteredExampleDTO)
            {
                <tr>
                    <td>
                        <button class="btn btn-sm btn-link" @onclick="@(() => EditExample(example.Id))">
                            @example.Id
                        </button>
                    </td>
                    <td>@example.NumberValue</td>
                    <td>@example.Text</td>
                    <td>@example.LargeText</td>
                    <td>@example.Boolean</td>
                    <td>@example.DateValue</td>
                    <td class="btn-group-vertical">
                        <button class="btn btn-sm btn-outline-warning" @onclick="@(() => EditExample(example.Id))">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger" @onclick="@(() => DeleteExample(example.Id))">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (ShowEdit)
{
    <dialog open="true" style="position:absolute;left: 0px;top: 200px;z-index: 900" class="border border-danger">
        <button class="btn btn-outline-secondary m-2" style="float:right" type="submit" @onclick="@( ( ) => ToggleModal(  ) )">x</button>
        <div>
            <ExampleAddEdit Title="@EditTitle" Id="@ExampleId" CloseModal="@CloseModalAsync" ParentId="@ParentId" />
        </div>
    </dialog>

}

@if (ShowDeleteConfirm)
{
    <dialog open="true" style="position:absolute;left: 0px;top: 200px;z-index: 900" class="border border-danger">
        <button class="btn btn-outline-secondary m-2" style="float:right" type="submit" @onclick="@( ( ) => ToggleShowDeleteConfirm(  ) )">x</button>
        <BlazoredModalConfirmDialogMVC Confirm="@CloseConfirmDeletion" ButtonColour="danger" Icon="fa fa-trash" Message="Please confirm that you wish to delete a record." Title="Deletion Confirmation Example Table" />
        <form method="dialog">
        </form>
    </dialog>
}
